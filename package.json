{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "lint": "run-p lint:*",
    "lint:js": "eslint \"**/*.js\"",
    "fix": "run-p fix:*",
    "fix:js": "eslint \"**/*.js\" --fix",
    "test": "lerna run test",
    "clean": "run-s clean:*",
    "clean:dependency": "lerna clean -y && rimraf -rf node_modules",
    "changelog": "lerna-changelog",
    "report-coverage": "lerna run report-coverage",
    "lerna:version": "lerna version",
    "lerna:publish": "lerna publish from-git --yes",
    "version": "lerna clean --yes && lerna bootstrap --ignore-scripts -- --no-audit && git add packages/*/npm-shrinkwrap.json",
    "postinstall": "lerna bootstrap",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@svrx/eslint-config": "^1.0.0",
    "codecov": "^3.5.0",
    "eslint": "^6.2.0",
    "expect.js": "^0.3.1",
    "husky": "^1.3.1",
    "lerna": "^3.13.2",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.2.5",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.0",
    "rimraf": "^2.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {},
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
